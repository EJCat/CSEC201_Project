{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}\\src\\**.c",
                "-I",
                "${workspaceFolder}\\include",
                "-o",
                "${workspaceFolder}\\bin\\main.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C++: gcc.exe compile hash dll",
            "command": "gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-shared",
                "-fPIC",
                "-I.hashdll/hash.h",
                "-o",
                "${workspaceFolder}\\bin\\hash.dll",
                "${workspaceFolder}\\.hashdll\\hash.cpp"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}